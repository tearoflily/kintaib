<% provide(:title, 'ユーザー詳細') %>

<h1>ユーザー詳細</h1>

<table class="table table-bordered">
  <tr>
    <th class="active">名前</th><td><%= @user.name %></td>
  </tr>
  <tr>
    <th class="active">Eメール</th><td><%= @user.email %></td>
  </tr>
  <tr>
    <th class="active">所属</th><td><%= @user.department %></td>
  </tr>
  
  <tr>
    <th class="active">指定勤務時間</th><td><%= l(@user.work_time, format: :time) %></td>
  </tr>
  
  <tr>
    <th class="active">基本時間</th><td><%= l(@user.basic_time, format: :time) %></td>
  </tr>
</table>