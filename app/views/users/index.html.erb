<%= provide(:title, "Users") %>

<h1>利用者一覧</h1>
<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <%= will_paginate %>
    <table class="table table-condensed table-hover" id="table-users">
      <thead>
        <t>
          <th><%= User.human_attribute_name :name %></th>
        </t>
      </thead>
      
      <tbody>
        <% @users.each do |user| %>
        <tr>
            <td><%= link_to user.name, user_works_path(user.id) %></td>
            
            <td class="table_right"><%= link_to 'ユーザー情報', edit_user_path(user.id), class:"btn btn-info" %></td>
            <td class="table_left"><%= link_to '削除', user_path(user), method: :delete, class:"btn btn-danger" %></td>
            
        </tr>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate %>
  </div>
</div>