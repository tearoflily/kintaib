<% provide(:title, @user.name) %>

<table class="table table-bordered">
	<tbody>
		<tr>
			<td>----年-月 勤怠管理表</td>
			<td>指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
			<td colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
			<td>初日 -/-</td>
		</tr>
		<tr>
			<td>所属：<%= current_user.department %></td>
			<td>氏名：<%= current_user.name %></td>
			<td>コード</td>
			<td></td>
			<td>出勤日数 --</td>
			<td>締め -/-</td>
		</tr>
	</tbody>
</table>


<%= button_to '勤怠を編集', "#", class: "btn btn-default btn-info"  %>


<table class="table table-bordered table-striped" id="table-attendances">
  <thead>
    <tr>
      <th rowspan="2">日付</th>
      <th rowspan="2">曜日</th>
      <th colspan="3">出社</th>
      <th colspan="3">退社</th>
      <th rowspan="2">在社時間</th>
      <th rowspan="2">備考</th>
      <th rowspan="2">残業指示</th>
      <th rowspan="2">指示者</th>
    </tr>
    <tr>
      <th>時</th><th>分</th><th>ボタン</th>
      <th>時</th><th>分</th><th>ボタン</th>
    </tr>
  </thead>
  
  <tbody>
    <% (@first_day..@last_day).each do |day| %>
    <tr>
      <td><%= l(day, format: :short) %></td>
      
      <td><%= $days_of_the_week[day.wday] %></td>
      <td>8</td><td>9</td><td>8</td>
      <td>9</td><td>9</td><td>9</td>
      <td>9</td>
      <td>9</td>
      <td>9</td>
      <td>9</td>
    </tr>
    <% end %>
    

    
    
    
    
  </tbody>

</table>