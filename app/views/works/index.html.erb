

<table class="table table-bordered">
	<tbody>
		<tr>
			<td><%= link_to "前月へ", user_works_path(date: @first_day.prev_month), class: "btn btn-info" %>
			【 <%= l(@first_day, format: :middle) %> 勤怠管理表 】
			<%= link_to "次月へ", user_works_path(date: @first_day.next_month), class: "btn btn-info" %>
			</td>
			<td>指定勤務時間：<%= format_basic_info(@user.work_time) %></td>
			<td colspan="3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
			<td>初日：<%= l(@first_day, format: :short) %></td>
		</tr>
		<tr>
			<td>所属：<%= current_user.department %></td>
			<td>氏名：<%= current_user.name %></td>
			<td>コード</td>
			<td></td>
			<td>出勤日数 --</td>
			<td>締め <%= l(@last_day, format: :short) %></td>
		</tr>
	</tbody>
</table>


<%= button_to '勤怠を編集', "#", class: "btn btn-default btn-info"  %>


<table class="table table-bordered table-striped" id="table-attendances">
  <thead>
    <tr>
      <th rowspan="2">日付</th>
      <th rowspan="2">曜日</th>
      <th colspan="3">出社</th>
      <th colspan="3">退社</th>
      <th rowspan="2">在社時間</th>
      <th rowspan="2">備考</th>
      <th rowspan="2">残業指示</th>
      <th rowspan="2">指示者</th>
    </tr>
    <tr>
      <th>時</th><th>分</th><th>ボタン</th>
      <th>時</th><th>分</th><th>ボタン</th>
    </tr>
  </thead>
  
  <tbody>
    <% @attendances.each do |day| %>
    <tr>
      <td><%= l(day.worked_on, format: :short) %></td>
      
      <td><%= $days_of_the_week[day.worked_on.wday] %></td>
      
      <td><%= l(day.started_at, format: :hour ) if day.started_at.present? %></td>
      <td><%= l(day.started_at, format: :minut ) if day.started_at.present? %></td>
      <td> 
        <% if (Date.current == day.worked_on) && day.started_at.nil? %>
          <%= link_to "出勤登録", user_work_path(@user,day), method: :patch, class: "btn btn-primary" %>
        <% end %>
      </td>
      
      
      <td><%= l(day.finished_at, format: :hour) if day.finished_at.present? %></td>
      <td><%= l(day.finished_at, format: :minut) if day.finished_at.present? %></td>
      <td>
        <% if (Date.current == day.worked_on) && day.started_at.present? && day.finished_at.nil? %>
          <%= link_to "退勤登録", user_work_path(@user,day), method: :patch, class: "btn btn-primary" %>
        <% end %>
      </td>
      
      <td>9</td>
      <td>9</td>
      <td>9</td>
      <td>9</td>
    </tr>
    <% end %>
    

    
    
    
    
  </tbody>

</table>